<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pomodorre.Controls">
    <Style x:Key="PDFocusGoalStyle" TargetType="local:FocusGoal">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:FocusGoal">
                    <ProgressBar Grid.Row="1" Value="{TemplateBinding Value}" Maximum="{TemplateBinding MaxValue}" Minimum="0" Margin="0,0,0,-1" Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                        <ProgressBar.Resources>
                            <x:Double x:Key="ProgressBarMinHeight">7</x:Double>
                            <x:Double x:Key="ProgressBarTrackHeight">7</x:Double>
                            <CornerRadius x:Key="ProgressBarCornerRadius">0,3.5,0,3.5</CornerRadius>
                            <CornerRadius x:Key="ProgressBarTrackCornerRadius">0</CornerRadius>
                        </ProgressBar.Resources>
                        <ProgressBar.Foreground>
                            <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                                <GradientStop x:Name="GradientStop1" Color="{ThemeResource SystemAccentColorDark1}" Offset="0"/>
                                <GradientStop x:Name="GradientStop2" Color="{ThemeResource SystemAccentColorLight1}" Offset="0.7"/>
                            </LinearGradientBrush>
                        </ProgressBar.Foreground>
                    </ProgressBar>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>